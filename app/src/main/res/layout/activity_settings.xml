<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout

    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <!-- About Us Button -->

    <TextView
        android:id="@+id/SettingPageActivityTextView"
        style="@style/TextAppearance.MaterialComponents.Headline6"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="31dp"
        android:layout_marginBottom="25dp"
        android:gravity="center"
        android:text="@string/settings_page"
        android:textColor="@color/black"
        android:textStyle="bold" />

    <Button
        android:id="@+id/TermsAndConditionsButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/SettingPageActivityTextView"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="-11dp"
        android:layout_marginEnd="0dp"
        android:layout_marginBottom="-131dp"
        android:backgroundTint="#1F45FC"
        android:text="@string/TermsAndConditionsButton" />

    <Button
        android:id="@+id/SettingsLogOutButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/TermsAndConditionsButton"
        android:layout_alignParentStart="true"
        android:layout_marginStart="0dp"
        android:layout_marginBottom="-103dp"
        android:backgroundTint="#1F45FC"
        android:text="Log Out" />

</RelativeLayout>